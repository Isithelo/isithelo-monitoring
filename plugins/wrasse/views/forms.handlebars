          }
          break;
          case (key == 'parent'):
          temp['parent'] = databaseMenu[i][key]
          break;
          case (key == 'description'):
          temp['text'] = databaseMenu[i][key]
          break;
          case (key == 'icon'):
          temp['icon'] = databaseMenu[i][key]
          break;
          case (key == 'template'):
          aclass = { 
            "data-template" : databaseMenu[i][key],
          }
          temp['a_attr'] =  aclass
          break;
          case (key == 'field'):
          aclass = { 
            "data-field" : databaseMenu[i][key],
          }
          temp['a_attr'] =  aclass
          break;          
        }
      }
      newData.push(temp)
    }
//error trap the menu.
for (var i = 0; i < newData.length; i++) {
