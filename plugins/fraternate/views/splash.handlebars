 
<script type="text/javascript" src="//d3js.org/d3.v3.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.min.js"></script>
<link rel="stylesheet" href="//cdn.jsdelivr.net/cal-heatmap/3.3.10/cal-heatmap.css" />

<style type="text/css">
	.awesome {
		padding: 2px;
		text-align:center;
		border-radius: 5px;
		background: linear-gradient(60deg, #f79533, #f37055, #ef4e7b, #a166ab, #5073b8, #1098ad, #07b39b, #6fba82);
	}

	.dotted {

		border-width: 1px;
		border-style: dashed; 
		border-color: grey;
		padding:55px;
		text-align: center;
		border-radius: 5px;
	}

</style>
<div class="row">
	<div class="col-md-7">
		<p></p>
		{{#if organizations}}
		<h3>Organizations <small>All user organizations are listed below.</small></h3>
		<div class="row" style="padding-top: 15px">
			{{#each organizations}}
			<div class="col-md-1 col-xs-2">
				<a href="/organizations/{{this.entry.name}}" title="{{this.entry.name}}"  >
					{{#if this.entry.picture}}
					<img  onerror="this.src='{{this.gravatar}}'"" src="{{this.entry.picture}}" class="media-object" style="max-width: 54px;border-radius: 5px;border: 1px;border-color: #d8d8d8;border-style: solid;">
					{{else}}
					<img src="{{this.gravatar}}" class="media-object" class="media-object" style="max-width: 55px;border-radius: 5px;border: 1px;border-color: #d8d8d8;border-style: solid;">
					{{/if}}       
				</a>
			</div>
			{{/each}}
			</div>
			<div class="col-md-12" style="text-align: right;padding-top: 15px">
				<p></p>
				<a class="btn btn-default " href="/organizations/new"><i class="fa fa-plus" aria-hidden="true"></i> Create an Organization</a> 	
			</div>
		{{else}}
		<h3>Organizations <small>Get started by creating your organization.</small></h3>
		<div style="border-width: 1px; border-style: dashed; border-color: grey;padding:15px;border-radius: 5px;">
			<p>No organizations found </p>
			<a class="btn btn-default btn-xl" href="/organizations/new"><i class="fa fa-plus" aria-hidden="true"></i> Create an Organization</a> 
		</div>
		{{/if}}<hr>
		<div style="padding-top: 15px">
		 <hr>
			<h3>Welcome to {{sitename}} </h3> 
			<p>Feel free to test the system , keep in mind the payments are spoofed on the sandbox Braintree system, as such you can experiment without paying, the Braintree sandbox will not accept valid credit card details.</p>
		</div>
		<h4>Plan</h4>
		{{#if user.plan.name}}
		<div class="well">
			<strong>Developer</strong>, Unlimited private repositories</strong>
		</div>
		<a class="btn btn-default" href="/users/{{user.username}}/settings/billing/" ><i class="fa fa-pencil" aria-hidden="true"></i> Edit Subscription</a>
		{{else}}
		<div class="well">
			<strong>Free plan</strong>, unlimited public repositories</strong>
		</div>
		<p><a class="btn btn-default" href="/users/{{user.username}}/settings/billing/upgrade">Get private repositories</a></p>
		{{/if}}
	</div>
	<div class="col-md-5">
	 <p></p>
		{{>rightpanel}}
	</div>
</div>

